# Build Production-Ready AI Agents
# Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Anthropic Claude API (Required)
# Get your key: https://console.anthropic.com/
# Pro account recommended for higher rate limits
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI API (Required for comparison demos)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# OPTIONAL: External Service Integrations (Segment 4)
# =============================================================================

# GitHub Integration (for MCP server demos)
# Create token: https://github.com/settings/tokens
# Scopes needed: repo, read:org
GITHUB_TOKEN=ghp_your-token-here

# Slack Integration (for notification demos)
# Create app: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-token-here
SLACK_CHANNEL_ID=C0123456789

# =============================================================================
# DATABASE CONFIGURATION (Segment 4 MCP Demos)
# =============================================================================

# PostgreSQL (optional, defaults to SQLite)
DATABASE_URL=postgresql://user:password@localhost:5432/agents_db

# SQLite (default, no configuration needed)
SQLITE_PATH=./data/agents.db

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default Claude model for agents
CLAUDE_MODEL=claude-sonnet-4-20250514

# Default OpenAI model (for comparison)
OPENAI_MODEL=gpt-4o

# Temperature for agent responses (0.0 - 1.0)
AGENT_TEMPERATURE=0.7

# =============================================================================
# RATE LIMITING & COSTS
# =============================================================================

# Max tokens per request
MAX_TOKENS=4096

# Rate limit (requests per minute)
RATE_LIMIT_RPM=60

# Cost tracking (set to 'true' to enable)
TRACK_COSTS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# MCP Server host/port
MCP_HOST=localhost
MCP_PORT=3000
